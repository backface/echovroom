    "randomcolor": "^0.5.4",
    "sass-loader": "^8.0.2",
    "vue": "^2.6.11",
    "vue-custom-scrollbar": "^1.1.0",
    "vue-feather-icons": "^5.0.0",
    "vue-fullscreen": "^2.1.6",
    "webrtc-adapter": "^7.5.1"
  },
  "devDependencies": {
    "live-server": "^1.2.1",
    "@vue/cli-plugin-babel": "^4.2.0",
    "@vue/cli-plugin-eslint": "^4.2.0",
    "@vue/cli-service": "^4.2.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
